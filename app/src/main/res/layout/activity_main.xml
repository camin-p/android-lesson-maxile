<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#ff0000"
                android:id="@+id/view_dp"
                android:text="view_dp"
                android:textColor="#fff"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/view_wrap"
                android:background="#00ff00"
                android:text="view_wrap"
                android:textColor="#fff"
                app:layout_constraintTop_toBottomOf="@id/view_dp"/>

            <TextView
                android:layout_width="50px"
                android:layout_height="50dp"
                android:id="@+id/view_px"
                android:background="#0000ff"
                android:text="view_px"
                android:textColor="#fff"

                app:layout_constraintTop_toBottomOf="@id/view_wrap"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/view_match"
                android:background="#000"
                android:text="view_match"
                android:textColor="#fff"
                app:layout_constraintTop_toBottomOf="@id/view_px"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relative_layout"
                app:layout_constraintTop_toBottomOf="@id/view_match"
                android:layout_margin="20dp"
                android:padding="10dp"
                android:background="#0000ff">
                <View
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/leftinrelative"
                    android:layout_alignParentTop="true"
                    android:background="#ff0000"

                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@+id/leftinrelative"
                    android:background="#00ff00"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/linear_h"
                app:layout_constraintTop_toBottomOf="@id/relative_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#ff0000"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="#ee0000"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#dd0000"/>
                <View
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:background="#cc0000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/linear_v"
                android:layout_height="200dp"
                app:layout_constraintTop_toBottomOf="@id/linear_h"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#00ff00"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:background="#00ee00"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#00dd00"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#00cc00"/>
            </LinearLayout>

            <android.support.v7.widget.AppCompatButton
                app:layout_constraintTop_toBottomOf="@id/linear_v"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_margin="6dp"
                android:padding="6dp"
                android:text="button"
                android:background="@drawable/btn_bg"
                />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>